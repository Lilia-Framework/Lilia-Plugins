#!/bin/bash

# URL to download the file
URL="https://github.com/FPtje/GLuaFixer/releases/download/1.28.0/glualint-1.28.0-x86_64-linux.zip"

# Filename extracted from URL
FILENAME=$(basename "$URL")

# Download the file
wget "$URL" -O "$FILENAME"

# Unzip the file
unzip "$FILENAME"

# File inside the zip
UNZIPPED_FILE="glualint"

# Change permissions to 777
chmod 777 "$UNZIPPED_FILE"

# Run the glualint command
./glualint pretty-print .